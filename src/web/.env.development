# Base URL for API Gateway in development environment
# Used for all HTTP requests to backend services
VITE_API_BASE_URL=http://localhost:3000

# Auth0 Authentication Configuration
# Domain, client ID and audience for Auth0 integration
# Used for user authentication and authorization
VITE_AUTH0_DOMAIN=dev-knowledge-curator.auth0.com
VITE_AUTH0_CLIENT_ID=dev-client-id
VITE_AUTH0_AUDIENCE=https://api.dev-knowledge-curator.com

# WebSocket Configuration
# WebSocket server URL for real-time updates
# Used for live content updates and notifications
VITE_WEBSOCKET_URL=ws://localhost:3000

# Development Features
# Mock API toggle for development testing
# Set to 'true' to use mock API responses instead of real backend
VITE_ENABLE_MOCK_API=false

# Logging Configuration
# Log level for development debugging
# Possible values: error, warn, info, debug, trace
VITE_LOG_LEVEL=debug